.introduction{
  position: relative;
  left: 2.5%;
  margin-top: 20px;
  padding-left: 24px;
  font-size: 30px;
  font-weight: bold;
  line-height: 46px;
  background-color: #6495ED;
  box-shadow: 6px 6px 5px #2222;
  border-radius: 20px;
  color: white;
  width: 160px;
}

.img {
  position: relative;
  left: 4%;
  top: 20px;
  display: inline-block;
  width: 150px;
  height: 221px;
  border-radius: 5px;
}

.text{
  display: inline-block;
  position: relative;
  bottom: 10px;
  left: 40px;
  line-height: 40px;
  background-color: #f6f6f6;
  box-shadow: 6px 6px 5px #2222;
  padding: 10px;
  border-radius: 5px;
}
.name{
  position: relative;
  font-size: 30px;
  font-weight: bold;
  margin-bottom: 10px;
}

.detail{
  position: relative;
  top: 17px;
  left: 8%;
  width: 84%;
  font-size: 16px;
  line-height: 30px;
  background-color: #f6f6f6;
  box-shadow: 6px 6px 5px #2222;
  padding: 10px;
  box-sizing: border-box;
  border-radius: 5px;
}

.aString {
  position: relative;
  font-size: 30px;
  font-weight: bold;
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  margin: 0 auto;
}
